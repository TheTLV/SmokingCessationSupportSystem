<Window
    x:Class="WPFApp.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Smoking Cessation Support - Đăng nhập"
    Width="500"
    Height="650"
    FontFamily="Roboto"
    Background="#FFF3E0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Color Palette - Matching DashboardView theme  -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FBC02D" />
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF9800" />
        <SolidColorBrush x:Key="AccentColor" Color="#FFF300" />
        <SolidColorBrush x:Key="DarkTextColor" Color="#212121" />
        <SolidColorBrush x:Key="LightTextColor" Color="#757575" />
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" />
        <SolidColorBrush x:Key="PageBackground" Color="#FFF3E0" />
        <SolidColorBrush x:Key="HeaderBackground" Color="#F57F17" />

        <!--  Login Button Style  -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0,20,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFECB3" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#55000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD54F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Input Field Style  -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#FFD54F" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>

        <!--  Password Field Style  -->
        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#FFD54F" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!--  Main Card Style  -->
        <Style x:Key="MainCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="Margin" Value="30" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#55000000" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#FFD54F" />
        </Style>

        <!--  Register Link Style  -->
        <Style x:Key="RegisterLinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{StaticResource HeaderBackground}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline" />
                    <Setter Property="Foreground" Value="{StaticResource PrimaryColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PageBackground}">
        <materialDesign:Card Style="{StaticResource MainCardStyle}" UniformCornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header Section  -->
                <Border
                    Grid.Row="0"
                    Background="{StaticResource HeaderBackground}"
                    CornerRadius="12,12,0,0"
                    Padding="30,25">
                    <StackPanel HorizontalAlignment="Center">
                        <!--  App Icon  -->
                        <Border
                            Width="80"
                            Height="80"
                            Background="{StaticResource PrimaryColor}"
                            CornerRadius="40"
                            Margin="0,0,0,15">
                            <materialDesign:PackIcon
                                Width="50"
                                Height="50"
                                Foreground="Black"
                                Kind="SmokingOff"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>

                        <!--  App Title  -->
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="SMOKING CESSATION"
                            TextAlignment="Center" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource AccentColor}"
                            Text="SUPPORT SYSTEM"
                            TextAlignment="Center" />

                        <!--  Welcome Message  -->
                        <Border
                            Background="#FFECB3"
                            CornerRadius="20"
                            Padding="15,8"
                            Margin="0,15,0,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkTextColor}"
                                Text="🌟 Chào mừng bạn đến với hệ thống hỗ trợ cai thuốc"
                                TextAlignment="Center" />
                        </Border>
                    </StackPanel>
                </Border>

                <!--  Form Section  -->
                <ScrollViewer
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    Padding="40,20,40,20">
                    <StackPanel>
                        <!--  Form Title  -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Foreground="{StaticResource PrimaryColor}"
                                Kind="Login"
                                Margin="0,0,10,0" />
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="{StaticResource HeaderBackground}"
                                Text="ĐĂNG NHẬP HỆ THỐNG"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <!--  Username Input  -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkTextColor}"
                                Text="👤 Tên đăng nhập"
                                Margin="0,0,0,8" />
                            <TextBox
                                x:Name="UsernameTextBox"
                                materialDesign:HintAssist.Hint="Nhập tên đăng nhập của bạn"
                                Style="{StaticResource InputFieldStyle}"
                                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
                                </TextBox.InputBindings>
                            </TextBox>
                        </StackPanel>

                        <!--  Password Input  -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="{StaticResource DarkTextColor}"
                                Text="🔒 Mật khẩu" />
                            <PasswordBox
                                x:Name="PasswordBox"
                                materialDesign:HintAssist.Hint="Nhập mật khẩu của bạn"
                                Style="{StaticResource PasswordFieldStyle}">
                                <PasswordBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
                                </PasswordBox.InputBindings>
                            </PasswordBox>
                        </StackPanel>

                        <!--  Login Button  -->
                        <Button
                            Click="Button_Click"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource LoginButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Foreground="Black"
                                    Kind="LoginVariant"
                                    Margin="0,0,10,0" />
                                <TextBlock Text="ĐĂNG NHẬP" />
                            </StackPanel>
                        </Button>

                        <!--  Additional Info  -->
                        <Border
                            Background="#FFF8E1"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,15,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource SecondaryColor}"
                                        Kind="InformationOutline"
                                        Margin="0,0,8,0" />
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource DarkTextColor}"
                                        Text="Thông tin hữu ích" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource LightTextColor}"
                                    Text="• Hệ thống hỗ trợ 24/7 cho hành trình cai thuốc của bạn"
                                    TextAlignment="Center" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource LightTextColor}"
                                    Text="• Kết nối với cộng đồng và chuyên gia tư vấn"
                                    TextAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!--  Footer Section  -->
                <Border
                    Grid.Row="2"
                    Background="#FFF8E1"
                    BorderBrush="#FFD54F"
                    BorderThickness="0,2,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20">
                    <StackPanel>
                        <!--  Register Link  -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock
                                FontSize="14"
                                Foreground="{StaticResource DarkTextColor}"
                                Text="Chưa có tài khoản? " />
                            <TextBlock
                                MouseLeftButtonUp="Register_Click"
                                Style="{StaticResource RegisterLinkStyle}"
                                Text="Đăng ký ngay tại đây!" />
                        </StackPanel>

                        <!--  Footer Info  -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <materialDesign:PackIcon
                                Width="14"
                                Height="14"
                                Foreground="{StaticResource LightTextColor}"
                                Kind="Heart"
                                Margin="0,0,5,0" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{StaticResource LightTextColor}"
                                Text="Hành trình cai thuốc thành công bắt đầu từ đây" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>