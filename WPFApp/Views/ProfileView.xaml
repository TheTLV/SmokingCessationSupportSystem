<Window
    x:Class="WPFApp.Views.MembershipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="QuitEasy - Quản lý hội viên"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Width="450"
    Height="652"
    Background="#FFF3E0"
    FontFamily="Roboto">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="materialDesign:HintAssist.Foreground" Value="#FFB300" />
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#FFB300" />
        </Style>

        <Style
            x:Key="PrimaryButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="0,12,0,0" />
            <Setter Property="Background" Value="#FFB300" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6" />
        </Style>
    </Window.Resources>

    <materialDesign:Card
        Margin="20"
        Background="#FFFFFF"
        UniformCornerRadius="12"
        BorderBrush="#FFD54F"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border
                Grid.Row="0"
                Background="#FFB300"
                CornerRadius="12,12,0,0"
                Padding="15">
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="#FFFFFF"
                        Kind="Leaf"
                        Margin="0,0,8,0" />
                    <StackPanel>
                        <TextBlock
                            Text="QUITEASY"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#FFFFFF" />
                        <TextBlock
                            Text="Quản lý hội viên"
                            FontSize="13"
                            Foreground="#FFFFFF"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Main content -->
            <StackPanel
                Grid.Row="1"
                Margin="25,20"
                VerticalAlignment="Top">
                <TextBlock
                    Text="Thông tin hội viên"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="#3C2F2F"
                    Margin="0,0,0,20" />

                <TextBox
                    materialDesign:HintAssist.Hint="Họ tên"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    materialDesign:HintAssist.Hint="Email"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    materialDesign:HintAssist.Hint="Số điện thoại"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBox
                    materialDesign:HintAssist.Hint="Địa chỉ"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <Button
                    Content="LƯU THÔNG TIN"
                    Style="{StaticResource PrimaryButton}" />
            </StackPanel>

            <!-- Footer -->
            <Border
                Grid.Row="2"
                BorderBrush="#FFD54F"
                BorderThickness="0,1,0,0"
                Padding="15">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Text="Quay lại "
                        Foreground="#4E342E"
                        FontSize="13" />
                    <TextBlock
                        Cursor="Hand"
                        FontSize="13"
                        Foreground="#FFB300"
                        Text="trang chính">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </materialDesign:Card>
</Window>