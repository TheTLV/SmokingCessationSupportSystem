<Window
    x:Class="WPFApp.Views.NotificationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Thông báo"
    Width="450"
    Height="600"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="15"
            Background="#1976D2">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Kind="Bell" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="THÔNG BÁO" />
            </StackPanel>
        </Border>

        <!--  Danh sách thông báo  -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Notifications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="10"
                            BorderBrush="#EEE"
                            BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Biểu tượng  -->
                                <materialDesign:PackIcon
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    Foreground="#1976D2"
                                    Kind="Information" />

                                <!--  Nội dung  -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Text="{Binding Message}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="11"
                                        Foreground="#666"
                                        Text="{Binding SentDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                                </StackPanel>

                                <!--  Nút đánh dấu đã đọc  -->
                                <Button
                                    Grid.Column="2"
                                    Command="{Binding DataContext.MarkAsReadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Id}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Đánh dấu đã đọc">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#43A047"
                                        Kind="Check" />
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  Footer với các nút chức năng  -->
        <Border
            Grid.Row="2"
            Padding="10"
            Background="#F5F5F5">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Command="{Binding MarkAllAsReadCommand}"
                    Content="ĐÁNH DẤU TẤT CẢ ĐÃ ĐỌC"
                    Style="{StaticResource MaterialDesignFlatButton}" />
                <Button
                    Click="Button_Click"
                    Command="{Binding CloseCommand}"
                    Content="ĐÓNG"
                    Style="{StaticResource MaterialDesignFlatButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>