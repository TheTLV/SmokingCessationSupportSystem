<UserControl
    x:Class="WPFApp.Views.FeedbackManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Feedbacks}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UserId}"
                    Header="Người gửi" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Rating}"
                    Header="Đánh giá" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FeedbackType}"
                    Header="Loại" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding FeedbackContent}"
                    Header="Nội dung" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}"
                    Header="Ngày tạo" />

                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.DeleteFeedbackCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Kind="Delete" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>